@{
    ViewBag.Title = "System Users";
}
<div class="row">
    <div class="col-md-12">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
                        <h2 class="ml-lg-2">Manage  System Users</h2>
                    </div>
                </div>
            </div>
            <table id="userDetailsTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>USER NAME</th>
                        <th>NIC</th>
                        <th>EPF NUMBER</th>
                        <th>ADDRESS</th>
                        <th>ACTION</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="checkbox1" name="option[]" value="1">
                                <label for="checkbox1"></label>
                            </span>
                        </th>
                        <th>
                            <a href="#editEmployeeModal" class="edit" data-toggle="modal">
                                <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                            </a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal">
                                <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                            </a>
                        </th>
                    </tr>
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">showing <b>5</b> out of <b>25</b></div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item "><a class="page-link">1</a></li>
                    <li class="page-item "><a class="page-link">2</a></li>
                    <li class="page-item active"><a class="page-link">3</a></li>
                    <li class="page-item "><a class="page-link">4</a></li>
                    <li class="page-item "><a class="page-link">5</a></li>
                    <li class="page-item "><a class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>
    <!----add-modal start--------->
    <!----edit-modal end--------->
    <!----edit-modal start--------->
    <div class="modal fade" tabindex="-1" id="editEmployeeModal" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit User Details</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editEmployeeForm">
                        <div class="form-group">
                            <label for="editUserId">User ID:</label>
                            <input type="text" class="form-control" id="editUserId" name="editUserId" required disabled>
                        </div>
                        <div class="form-group">
                            <label for="editUserName">User Name:</label>
                            <input type="text" class="form-control" id="editUserName" name="editUserName" required>
                            <label id="lblEditUserName" class="text-danger"></label>
                        </div>
                        <div class="form-group">
                            <label for="editNic">NIC:</label>
                            <input type="text" class="form-control" id="editNic" name="editNic" required>
                            <label id="lblEditNic" class="text-danger"></label>
                        </div>
                        <div class="form-group">
                            <label for="editEpfNumber">EPF Number:</label>
                            <input type="text" class="form-control" id="editEpfNumber" name="editEpfNumber" required>
                            <label id="lblEditEpfNumber" class="text-danger"></label>
                        </div>
                        <div class="form-group">
                            <label for="editAddress">Address:</label>
                            <textarea class="form-control" id="editAddress" name="editAddress" required></textarea>
                            <label id="lblEditAddress" class="text-danger"></label>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancelButton" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="saveEditButton">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!----edit-modal end--------->
    <!----edit-modal end--------->
</div>
<script>
    $(document).ready(function () {
        $.ajax({
            url: '/Main/UserDetails',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                $('#userDetailsTable tbody').empty();
                $.each(data, function (index, item) {
                    var row =
                        '<tr>' +
                        '<td>' + item.Id + '</td>' +
                        '<td>' + item.UserName + '</td>' +
                        '<td>' + item.Nic + '</td>' +
                        '<td>' + item.EPFNumber + '</td>' +
                        '<td>' + item.Address + '</td>' +
                        '<td>' +
                        '<button class="btn btn-info edit-button btn-sm " data-id="' + item.Id + '">Edit</button>' +
                        '<button class="btn btn-danger delete-button btn-sm" data-id="' + item.Id + '">Delete</button>' +
                        '</td>' +
                        '</tr>';
                    $('#userDetailsTable tbody').append(row);
                });
                $('.delete-button').click(function () {
                    var userId = $(this).data('id');
                    // Confirm with the user before proceeding with the deletion
                    var confirmation = confirm('Are you sure you want to delete this user?');
                    if (confirmation) {
                        // Send an AJAX request to delete the user
                        $.ajax({
                            url: '/Main/DeleteUser',
                            type: 'POST',
                            data: { userId: userId }, // Pass the userId as data
                            success: function (response) {
                                if (response === 'Delete') {
                                    alert('User deleted successfully');
                                } else if (response === 'Fail') {
                                    alert('Failed to delete user');
                                }
                                else {
                                    alert(response);
                                }
                            },
                            error: function () {
                                // Handle error here
                                alert('Error deleting user');
                            }
                        });
                    }
                }); -
                    // Add click event handler for the "Edit" button
                    $('.edit-button').click(function () {
                        var userId = $(this).data('id');

                        // Fetch user details by ID using another AJAX request
                        $.ajax({
                            url: '/Main/GetUserDetailsById/' + userId, // Adjust the URL as needed
                            type: 'GET',
                            dataType: 'json',
                            success: function (userData) {
                                // Populate the modal with user data
                                $('#editEmployeeModal input[name="editUserId"]').val(userData.Id);
                                $('#editEmployeeModal input[name="editUserName"]').val(userData.UserName);
                                $('#editEmployeeModal input[name="editEpfNumber"]').val(userData.EPFNumber);
                                $('#editEmployeeModal textarea[name="editAddress"]').val(userData.Address);
                                $('#editEmployeeModal input[name="editNic"]').val(userData.Nic);
                                // Open the modal
                                $('#editEmployeeModal').modal('show');
                            },
                            error: function () {
                                // Handle error here
                                alert('Error fetching user data');
                            }
                        });
                    });
                // cancel edit menu
                $("#cancelButton").click(function () {
                    $("#editEmployeeModal").modal("hide");
                });

                function getCookie(name) {
                    const value = `; ${document.cookie}`;
                    const parts = value.split(`; ${name}=`);
                    if (parts.length === 2) {
                        return parts.pop().split(';').shift();
                    }
                }

                // Usage:
                const sessionData = getCookie("Session");

                $("#saveEditButton").click(function () {
                    if (validateForm()) {
                        var userId = $("#editUserId").val();
                        var userName = $("#editUserName").val();
                        var Nic = $("#editNic").val();
                        var epfNumber = $("#editEpfNumber").val();
                        var address = $("#editAddress").val();

                        // create a data object to send server
                        var Data = {
                            Id: userId,
                            UserName: userName,
                            EPFNumber: epfNumber,
                            Nic: Nic,
                            Address: address,
                            SessionKey: sessionData
                        }
                        // Send an ajax request to update the user details
                        $.ajax({
                            url: "/Main/EditUserDetails",
                            method: "POST",
                            data: Data,
                            success: function (response) {
                                if (response === "success") {
                                    $("#editEmployeeModal").modal("hide");
                                }
                                else {
                                    alert("User is not update pleas check the data")
                                }
                                console.log("Employee details updated successfully");
                            },
                            error: function (error) {
                                console.error("Error updating employee details: " + error.responseText);
                            }
                        });
                    }

                })
            },
            error: function () {
                // Handle error here
                alert('Error fetching data');
            }
        });

        function validateForm() {
            var isValid = true;
            $('.text-danger').text('');
            // Validate User Name
            var userName = $('#editUserName').val();
            if (userName.trim() === '') {
                $('#lblEditUserName').text('User Name is required');
                isValid = false;
            }
            // Validate NIC
            var nic = $('#editNic').val();
            if (nic.trim() === '') {
                $('#lblEditNic').text('NIC is required');
                isValid = false;
            }
            // Validate EPF Number
            var epfNumber = $('#editEpfNumber').val();
            if (epfNumber.trim() === '') {
                $('#lblEditEpfNumber').text('EPF Number is required');
                isValid = false;
            }
            // Validate Address
            var address = $('#editAddress').val();
            if (address.trim() === '') {
                $('#lblEditAddress').text('Address is required');
                isValid = false;
            }
            return isValid;
        }
        $('#editEmployeeForm input, #editAddress').focus(function () {
            $('.text-danger').text('');
        });



    });
</script>

