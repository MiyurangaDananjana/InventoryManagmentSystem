
@{
    ViewBag.Title = "Product";
}

<div class="row">
    <div class="col-md-12">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6 p-0 flex justify-content-lg-start justify-content-center">
                        <h2 class="ml-lg-2">Manage Supplier</h2>
                    </div>
                    <div class="col-sm-6 p-0 flex justify-content-lg-end justify-content-center">
                        <a href="#addEmployeeModal" class="btn btn-success" data-toggle="modal">
                            <i class="material-icons">&#xE147;</i>
                            <span>Add New Supplier</span>
                        </a>
                        @*<a href="#deleteEmployeeModal" class="btn btn-danger" data-toggle="modal">
                                <i class="material-icons">&#xE15C;</i>
                                <span>Delete</span>
                            </a>*@
                    </div>
                </div>
            </div>
            <table id="userDetailsTable" class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>Product ID</th>
                        <th>Brand Name</th>
                        <th>Product NAme</th>
                        <th>Product Description</th>
                        <th>Unit Price</th>
                        <th>Supplier Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th>
                            <span class="custom-checkbox">
                                <input type="checkbox" id="checkbox1" name="option[]" value="1">
                                <label for="checkbox1"></label>
                            </span>
                        </th>
                        <th>
                            <a href="#editEmployeeModal" class="edit" data-toggle="modal">
                                <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                            </a>
                            <a href="#deleteEmployeeModal" class="delete" data-toggle="modal">
                                <i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i>
                            </a>
                        </th>
                    </tr>
                </tbody>
            </table>
            <div class="clearfix">
                <div class="hint-text">showing <b>5</b> out of <b>25</b></div>
                <ul class="pagination">
                    <li class="page-item disabled"><a href="#">Previous</a></li>
                    <li class="page-item "><a class="page-link">1</a></li>
                    <li class="page-item "><a class="page-link">2</a></li>
                    <li class="page-item active"><a class="page-link">3</a></li>
                    <li class="page-item "><a class="page-link">4</a></li>
                    <li class="page-item "><a class="page-link">5</a></li>
                    <li class="page-item "><a class="page-link">Next</a></li>
                </ul>
            </div>
        </div>
    </div>



    <!----add-modal start--------->
    <div class="modal fade" tabindex="-1" id="addEmployeeModal" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Add New Product</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label>Product Name</label>
                        <input type="text" class="form-control" id="addProductName" name="addProductName" required>
                    </div>
                    <div class="form-group">
                        <label>Brand</label>
                        <select class="form-select form-control" id="addBrand" name="addBrand" required>
                            <option selected>Choose a Brand</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Product Description</label>
                        <textarea type="text" class="form-control" id="addProductDescription" name="addProductDescription" required> </textarea>
                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" id="addPrice" name="addPrice" required>
                    </div>

                    <div class="form-group">
                        <label>Supplier</label>
                        <select class="form-select form-control" id="addSupplier" name="addSupplier" required>
                            <option selected>Open this select menu</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success">Add</button>
                </div>
            </div>
        </div>
    </div>
    <!--Add model end-->



    <!----edit-modal start--------->
    <div class="modal fade" tabindex="-1" id="editEmployeeModal" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Edit Supplier</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form id="editEmployeeForm">
                        <div class="form-group">
                            <label for="editUserId">Product ID:</label>
                            <input type="text" class="form-control" id="editSuplierId" name="editSuplierId" required disabled>
                        </div>
                        <div class="form-group">
                            <label>Product Name</label>
                            <input type="text" class="form-control" id="editProductName" name="editProductName" required>
                        </div>
                        <div class="form-group">
                            <label>Brand</label>
                            <select class="form-select form-control" id="editBrand" name="editBrand" required>
                                <option selected>Choose a Brand</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Product Description</label>
                            <textarea type="text" class="form-control" id="editProductDescription" name="editProductDescription" required> </textarea>
                        </div>
                        <div class="form-group">
                            <label>Price</label>
                            <input class="form-control" id="editPrice" name="editPrice" required>
                        </div>

                        <div class="form-group">
                            <label>Supplier</label>
                            <select class="form-select form-control" id="editSupplier" name="editSupplier" required>
                                <option selected>Open this select menu</option>
                            </select>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" id="cancelButton" data-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-success" id="saveEditButton">Save</button>
                </div>
            </div>
        </div>
    </div>
    <!----edit-modal end--------->
</div>

<script>
    $(document).ready(function () {
        $("#addEmployeeModal").on('click', '.btn-success', function () {
            var data = {
                ProductName: $("#addEmployeeModal input[name='addProductName']").val(),
                ProductDescription: $("#addEmployeeModal textarea[name='addProductDescription']").val(),
                UnitPrice: $("#addEmployeeModal input[name='addPrice']").val(),
                SupplierId: $("#addSupplier").val(),
                BrandId: $("#addBrand").val()
            };
            $.ajax({
                type: "POST",
                url: "/Product/AddNewProduct",
                data: data,
                dataType: "json",
                success: function (result) {
                    if (result.success) {
                        alert("Supplier added successfully");
                        loadDataIntoTable();
                        $("#addEmployeeModal").modal('hide');
                    } else {
                        alert(result.message);
                    }
                },
                error: function () {
                    alert("An error occurred while processing your request.");
                }
            });
        });


        // cancel edit menu
        $("#cancelButton").click(function () {
            $("#editEmployeeModal").modal("hide");
        });

        $("#cancelButton").click(function () {
            $("#editEmployeeModal").modal("hide");
        });



        function loadDataIntoTable() {
            $.ajax({
                url: '/Product/GetProduct',
                type: 'GET',
                dataType: 'json',
                success: function (data) {
                    $('#userDetailsTable tbody').empty();
                    $.each(data, function (index, item) {
                        var row =
                            '<tr>' +
                            '<td>' + item.ProductId + '</td>' +
                            '<td>' + item.BrandName + '</td>' +
                            '<td>' + item.ProductName + '</td>' +
                            '<td>' + item.ProductDescription + '</td>' +
                            '<td>' + item.UnitPrice + '</td>' +
                            '<td>' + item.SupplierName + '</td>' +
                            '<td>' +
                            '<button class="btn btn-info edit-button btn-sm" data-id="' + item.ProductId + '">Edit</button>' +
                            '<button class="btn btn-danger delete-button btn-sm" data-id="' + item.ProductId + '">Delete</button>' +
                            '</td>' +
                            '</tr>';
                        $('#userDetailsTable tbody').append(row);
                    });
                },
                error: function () {
                    alert("An error occurred while loading data.");
                }
            });
        }
        $.ajax({
            //Start Data load the table
            url: '/Product/GetProduct',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                $('#userDetailsTable tbody').empty();
                $.each(data, function (index, item) {
                    var row =
                        '<tr>' +
                        '<td>' + item.ProductId + '</td>' +
                        '<td>' + item.BrandName + '</td>' +
                        '<td>' + item.ProductName + '</td>' +
                        '<td>' + item.ProductDescription + '</td>' +
                        '<td>' + item.UnitPrice + '</td>' +
                        '<td>' + item.SupplierName + '</td>' +
                        '<td>' +
                        '<button class="btn btn-info edit-button btn-sm" data-id="' + item.ProductId + '">Edit</button>' +
                        '<button class="btn btn-danger delete-button btn-sm" data-id="' + item.ProductId + '">Delete</button>' +
                        '</td>' +
                        '</tr>';
                    $('#userDetailsTable tbody').append(row);
                });

                $('.delete-button').click(function () {
                    var SupplierID = $(this).data('id');
                    // Confirm with the user before proceeding with the deletion
                    var confirmation = confirm('Are you sure you want to delete this user?');
                    if (confirmation) {
                        // Send an AJAX request to delete the user
                        $.ajax({
                            url: '/Supplier/DeleteSupplierDetails',
                            type: 'POST',
                            data: { SupplierID: SupplierID }, // Pass the userId as data
                            success: function (response) {
                                if (response === 'Delete') {
                                    alert('User deleted successfully');
                                    loadDataIntoTable(); // Load table data

                                } else {
                                    alert('Failed to delete user');
                                }
                            },
                            error: function () {
                                // Handle error here
                                alert('Error deleting user');
                            }
                        });
                    }
                });
                // Add click event handler for the "Edit" button
                $('.edit-button').click(function () {
                    var productId = $(this).data('id');
                    // Fetch user details by ID using another AJAX request
                    $.ajax({
                        url: '/Product/GetProductById?productId=' + productId,
                        type: 'GET',
                        dataType: 'json',
                        success: function (userData) {
                            // Populate the modal with user data
                            $('#editSuplierId').val(userData.ProductId);
                            $('#editProductName').val(userData.ProductName);
                            $('#editProductDescription').val(userData.ProductDescription);
                            $('#editPrice').val(userData.Price);
                            $('#editEmployeeModal').modal('show');
                        },
                        error: function () {
                            alert('Error fetching user data');
                        }
                    });
                });
                $("#saveEditButton").click(function () {
                    var SupplierID = $("#editSuplierId").val();
                    var SupplierName = $("#editSupplierName").val();
                    var Address = $("#editSupplierAddress").val();
                    var PhoneNumber = $("#editPhoneNumber").val();
                    var Description = $("#editDescription").val();
                    // create a data object to send server
                    var Data = {
                        SupplierID: SupplierID,
                        SupplierName: SupplierName,
                        Address: Address,
                        PhoneNumber: PhoneNumber,
                        Description: Description
                    }
                    // Send an ajax request to update the user details
                    $.ajax({
                        url: "/Supplier/EditSupplierDetails",
                        method: "POST",
                        data: Data,
                        success: function (response) {
                            if (response === "Success") {
                                $("#editEmployeeModal").modal("hide");
                                alert("User is update pleas check the data")
                                loadDataIntoTable(); // Load table data
                            }
                            else {
                                alert("User is not update pleas check the data")
                            }
                            console.log("Employee details updated successfully");
                        },
                        error: function (error) {
                            console.error("Error updating employee details: " + error.responseText);
                        }
                    });
                })
            },
            error: function () {
                // Handle error here
                alert('Error fetching data');
            }
        });

        //-- Load the data selection to Brand -- //
        $.ajax({
            type: "GET",
            url: "/Product/BrandIdName",
            dataType: "json",
            success: function (data) {
                // Clear existing options
                $("#addBrand").empty();
                // Add new options from the data
                $.each(data, function (index, item) {
                    $("#addBrand").append($('<option>', {
                        value: item.BrandId,
                        text: item.BrandName
                    }));
                });

                $("#editBrand").empty();
                // Add new options from the data
                $.each(data, function (index, item) {
                    $("#editBrand").append($('<option>', {
                        value: item.BrandId,
                        text: item.BrandName
                    }));
                });


            },
            error: function () {
                alert("Failed to load brands.");
            }
        });

        //-- Load the data selection to Supplier --//
        $.ajax({
            type: "GET",
            url: "/Supplier/SupplierNameAndId", 
            dataType: "json",
            success: function (data) {
                // Clear existing options
                $("#addSupplier").empty();
                // Add new options from the data
                $.each(data, function (index, item) {
                    $("#addSupplier").append($('<option>', {
                        value: item.SupplierID,
                        text: item.SupplierName
                    }));
                });

                $("#editSupplier").empty();
                // Add new options from the data
                $.each(data, function (index, item) {
                    $("#editSupplier").append($('<option>', {
                        value: item.SupplierID,
                        text: item.SupplierName
                    }));
                });
            },
            error: function () {
                alert("Failed to load brands.");
            }
        });
    });
</script>



