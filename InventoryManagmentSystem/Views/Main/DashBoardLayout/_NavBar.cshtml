            </ol>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        const cookieName = "Session";
        const sessionKey = Cookies.get(cookieName);

        if (sessionKey) {
            // Session cookie exists, fetch user details
            $.ajax({
                url: '/Auth/GetTheUserDetailsBySession',
                type: 'GET',
                data: { session: sessionKey },
                dataType: 'json',
                success: function (data) {
                    if (data) {
                        // Update the user name
                        $('#userName').text(data.UserName);

                        // Fetch and display the user image
                        fetchImage(data.ImageName);

                        // Show the logout link
                        $("#logoutLink").show();
                    } else {
                        console.log('Session not found or user details not available.');
                        // Redirect to the login page or handle the situation accordingly
                        window.location.href = '/login'; // Update with the appropriate login URL
                    }
                },
                error: function () {
                    console.log('Error occurred during the AJAX request.');
                    // Handle the error as needed, e.g., display an error message.
                }
            });
        } else {
            // Session cookie not found, redirect to the login page
            console.log('Session cookie not found.');
            window.location.href = '/login'; // Update with the appropriate login URL
        }

        // Logout link click event
        $("#logoutLink").click(function () {
            // Clear the session cookie
            Cookies.remove(cookieName);
            // Redirect to the login page or logout endpoint as needed
            window.location.href = '/logout'; // Update with the appropriate logout URL
        });
    });

    function fetchImage(imageName) {
        var imageElement = document.getElementById('imageName');
        var imageUrl = 'http://localhost:55811/Auth/GetImage?imageName=' + imageName; // Replace with the actual image URL
        imageElement.src = imageUrl;
    }
</script>
